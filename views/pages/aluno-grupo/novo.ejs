<!DOCTYPE html>
<html>
<head>
    <title>Nova Relação Aluno-Grupo</title>
    <link rel="stylesheet" type="text/css" href="/css/style.css">
    <script src="/js/script.js" defer></script>
</head>
<body>
    <h1>Adicionar Nova Relação Aluno-Grupo</h1>
    <form id="formAlunoGrupo" onsubmit="event.preventDefault(); handleSubmit();">
        <div>
            <label for="id_aluno">Aluno:</label>
            <select id="id_aluno" name="id_aluno" required>
                <% alunos.forEach(aluno => { %>
                    <option value="<%= aluno.id %>"><%= aluno.nome %></option>
                <% }); %>
            </select>
        </div>
        <div>
            <label for="id_grupo">Grupo:</label>
            <select id="id_grupo" name="id_grupo" required>
                <% grupos.forEach(grupo => { %>
                    <option value="<%= grupo.id %>"><%= grupo.nome %></option>
                <% }); %>
            </select>
        </div>
        <button type="submit">Salvar</button>
        <a href="/" class="button">Cancelar</a>
    </form>

    <script>
        async function handleSubmit() {
            const data = {
                id_aluno: document.getElementById('id_aluno').value,
                id_grupo: document.getElementById('id_grupo').value
            };
            try {
                await alunoGrupoApi.criar(data);
                window.location.href = '/';
            } catch (error) {
                console.error('Erro:', error);
            }
        }
    </script>
</body>
</html>