<!DOCTYPE html>
<html>
<head>
    <title>Editar Sala</title>
    <link rel="stylesheet" type="text/css" href="/css/style.css">
    <script src="/js/script.js" defer></script>
</head>
<body>
    <h1>Editar Sala</h1>
    <form id="formSala" onsubmit="event.preventDefault(); handleSubmit();">
        <div>
            <label for="nome">Nome:</label>
            <input type="text" id="nome" name="nome" value="<%= sala.nome %>" required>
        </div>
        <div>
            <label for="capacidade">Capacidade:</label>
            <input type="number" id="capacidade" name="capacidade" value="<%= sala.capacidade %>" required min="1">
        </div>
        <button type="submit">Atualizar</button>
        <a href="/" class="button">Cancelar</a>
    </form>

    <script>
        async function handleSubmit() {
            const data = {
                nome: document.getElementById('nome').value,
                capacidade: document.getElementById('capacidade').value
            };
            try {
                await salaApi.editar('<%= sala.id %>', data);
                window.location.href = '/';
            } catch (error) {
                console.error('Erro:', error);
            }
        }
    </script>
</body>
</html>