<!DOCTYPE html>
<html>
<head>
    <title>Nova Sala</title>
    <link rel="stylesheet" type="text/css" href="/css/style.css">
    <script src="/js/script.js" defer></script>
</head>
<body>
    <h1>Adicionar Nova Sala</h1>
    <form id="formSala" onsubmit="event.preventDefault(); handleSubmit();">
        <div>
            <label for="nome">Nome:</label>
            <input type="text" id="nome" name="nome" required>
        </div>
        <div>
            <label for="capacidade">Capacidade:</label>
            <input type="number" id="capacidade" name="capacidade" required min="1">
        </div>
        <button type="submit">Salvar</button>
        <a href="/" class="button">Cancelar</a>
    </form>

    <script>
        async function handleSubmit() {
            const data = {
                nome: document.getElementById('nome').value,
                capacidade: document.getElementById('capacidade').value
            };
            try {
                await salaApi.criar(data);
                window.location.href = '/';
            } catch (error) {
                console.error('Erro:', error);
                alert('Erro ao criar sala');
            }
        }
    </script>
</body>
</html>