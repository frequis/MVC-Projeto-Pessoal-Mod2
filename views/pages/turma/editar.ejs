<!DOCTYPE html>
<html>
<head>
    <title>Editar Turma</title>
    <link rel="stylesheet" type="text/css" href="/css/style.css">
    <script src="/js/script.js" defer></script>
</head>
<body>
    <h1>Editar Turma</h1>
    <form id="formTurma" onsubmit="event.preventDefault(); handleSubmit();">
        <div>
            <label for="nome">Nome:</label>
            <input type="text" id="nome" name="nome" value="<%= turma.nome %>" required>
        </div>
        <div>
            <label for="ano_de_entrada">Ano de Entrada:</label>
            <input type="number" id="ano_de_entrada" name="ano_de_entrada" value="<%= turma.ano_de_entrada %>" required>
        </div>
        <button type="submit">Atualizar</button>
        <a href="/" class="button">Cancelar</a>
    </form>

    <script>
        async function handleSubmit() {
            const data = {
                nome: document.getElementById('nome').value,
                ano_de_entrada: document.getElementById('ano_de_entrada').value
            };

            try {
                await turmaApi.editar('<%= turma.id %>', data);
                window.location.href = '/';
            } catch (error) {
                console.error('Erro:', error);
            }
        }
    </script>
</body>
</html>